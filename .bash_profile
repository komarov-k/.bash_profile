export CLICOLOR=1
export LSCOLORS=gxBxhxDxfxhxhxhxhxcxcx

####################################################################################################
#	PATH Settings
####################################################################################################

#		--------------------------------------------------------------------------------------------
# 1. 	 MacPorts stuff... 
#		--------------------------------------------------------------------------------------------

export PATH="/opt/local/bin:/opt/local/sbin:$PATH"
export LD_LIBRARY_PATH="/opt/local/lib:$LD_LIBRARY_PATH"

# 		Note: MacPorts paths are used instead of native ones first!

#		--------------------------------------------------------------------------------------------
# 2. 	 Brew stuff... 
#		--------------------------------------------------------------------------------------------

export PATH="/usr/local/bin:/usr/local/sbin:$PATH"
export LD_LIBRARY_PATH="/usr/local/lib:$LD_LIBRARY_PATH"

#               --------------------------------------------------------------------------------------------
# 2. 	 NVIDIA stuff... 
#		--------------------------------------------------------------------------------------------

export PATH="$PATH:/Developer/NVIDIA/CUDA-8.0/bin"
export DYLD_LIBRARY_PATH="$DYLD_LIBRARY_PATH:/Developer/NVIDIA/CUDA-8.0/lib"

#		--------------------------------------------------------------------------------------------
# 2. 	 Custom tools & stuff... 
#		--------------------------------------------------------------------------------------------

export PATH="$PATH:~/Code/tools/"

